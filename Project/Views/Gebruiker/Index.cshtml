@model Project.ViewModels.GebruikerListViewModel
@{
    ViewData["Title"] = "Index";
}
<h2> Gebruikers</h2>
<p>
    <a asp-action="Create" > nieuwe gebruiker </a>
</p>
<p>
    <a asp-action="GrantPermissions"> Change Roles</a>
</p>

<table>
    <thead>
        <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(v => v.Gebruikers[0].Naam)
        </th>
        <th class="col-md-4">
            @Html.DisplayNameFor(v => v.Gebruikers[0].Voornaam)
        </th>

    <th class="col-md-4">
            @Html.DisplayNameFor(v => v.Gebruikers[0].Email)
    </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var gebruiker in Model.Gebruikers){
            <tr>
                <td class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Naam)
                </td>
                <td class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Voornaam)
                </td>

                <td class="col-md-4">
                    @Html.DisplayFor(modelitem => gebruiker.Email)
                </td>
                <td class="col-md-4">
                    <a asp-action="Edit" asp-route-id="@gebruiker.Id">Wijzigen</a>

                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@gebruiker.Id">Verwijderen</a>
                </td>
            </tr>
             }
    </tbody>
</table>