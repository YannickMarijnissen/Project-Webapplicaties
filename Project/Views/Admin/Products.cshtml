@model Project.ViewModels.ProductenOverviewViewModel;
@{
    ViewData["Title"] = "Admin - Donuts";
}

<h1 class="mt-5">@ViewData["Title"]</h1>

<form class="mt-5" asp-action="CreateProduct" method="get">
    <div class="form-group">
        <input type="submit" value="Nieuw product" class="btn" style="background-color: cornflowerblue !important; color: white !important;" />
    </div>
</form>
<table class="table table-bordered table-striped">
    <tr>

        <th>@Html.DisplayNameFor(model => model.Producten[0].Afbeelding)</th>
        <th>@Html.DisplayNameFor(model => model.Producten[0].Naam)</th>
        <th>@Html.DisplayNameFor(model => model.Producten[0].Beschrijving)</th>
        <th>@Html.DisplayNameFor(model => model.Producten[0].InVoorraad)</th>
        <th>@Html.DisplayNameFor(model => model.Producten[0].Prijs)</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var product in Model.Producten)
    {
        <tr>
            <td>
                <img src="~/images/@product.Afbeelding" alt="" class="img-fluid mx-auto d-block">
            </td>
            <td>@product.Naam</td>
            <td>@product.Beschrijving</td>
            <td>@product.InVoorraad</td>
            <td>@product.Prijs</td>
            <td><a class="button" asp-action="ProductDetails" asp-route-id="@product.ProductId">Details</a></td>
            <td>
                <a class="button" asp-action="EditProduct" asp-route-id="@product.ProductId">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                        <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                    </svg>
                </a>
            </td>
            <td>
                <a class="button" asp-action="DeleteProduct" asp-route-id="@product.ProductId">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                    </svg>
                </a>
            </td>
        </tr>
    }
</table>