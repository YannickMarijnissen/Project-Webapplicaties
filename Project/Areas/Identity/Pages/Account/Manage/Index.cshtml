@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Telefoonnummer</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Naam"></label>
                <input asp-for="Input.Naam" class="form-control" />
                <span asp-validation-for="Input.Naam" class="text-danger"></span>
            </div>
                        <div class="form-group">
                <label asp-for="Input.Voornaam"></label>
                <input asp-for="Input.Voornaam" class="form-control" />
                <span asp-validation-for="Input.Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Straat"></label>
                <input asp-for="Input.Straat" class="form-control" />
                <span asp-validation-for="Input.Straat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Huisnummer"></label>
                <input asp-for="Input.Huisnummer" class="form-control" />
                <span asp-validation-for="Input.Huisnummer" class="text-danger"></span>
            </div>
                        <div class="form-group">
                <label asp-for="Input.Postocde"></label>
                <input asp-for="Input.Postocde" class="form-control" />
                <span asp-validation-for="Input.Postocde" class="text-danger"></span>
            </div>
                        <div class="form-group">
                <label asp-for="Input.Gemeente"></label>
                <input asp-for="Input.Gemeente" class="form-control" />
                <span asp-validation-for="Input.Gemeente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Geboortedatum"></label>
                <input asp-for="Input.Geboortedatum" class="form-control" />
                <span asp-validation-for="Input.Geboortedatum" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}